<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.infograce.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_secFragment"
            app:destination="@id/secFragment" />
    </fragment>
    <fragment
        android:id="@+id/secFragment"
        android:name="com.example.infograce.SecFragment"
        android:label="sec_fragment"
        tools:layout="@layout/sec_fragment" >
        <action
            android:id="@+id/action_secFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>